{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 60
    }
  },
  "framework": "create-react-app",
  "installCommand": "npm ci && npm ci --prefix server && npm ci --prefix client",
  "buildCommand": "npm run build --prefix client",
  "outputDirectory": "client/build",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/static/(.*)", "destination": "/client/build/static/$1" },
    { "source": "/assets/(.*)", "destination": "/client/build/assets/$1" },
    { "source": "/favicon.ico", "destination": "/client/build/favicon.ico" },
    { "source": "/manifest.json", "destination": "/client/build/manifest.json" },
    { "source": "/robots.txt", "destination": "/client/build/robots.txt" },
    { "source": "/(.*)", "destination": "/client/build/$1" },
    { "source": "/.*", "destination": "/client/build/index.html" }
  ]
}